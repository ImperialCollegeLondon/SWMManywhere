{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "-m",
                "pytest",
                "--maxfail=1",
                "--disable-warnings"
            ],
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            },
            "console": "integratedTerminal",
            "purpose": [
                "debug-test"
            ],
            "justMyCode": false
        }
    ]
}
